@page
@model PinewoodTech.WebApp.Pages.Customer.IndexModel
@{
}

<div class="text-center">
    <h1 class="display-4">Customers</h1>
    <p>Customers View, Add, Edit, Delete</p>
</div>
<div>
    <table class="table table-bordered table-striped" style="width:80%">
        <thead>
            <tr>
                <th>Id</th>
                <th class="text-center">Firstname?</th>
                <th class="text-center">Age</th>
                <th class="text-center">CreatedOn</th>
            </tr>
        </thead>

        <tbody>
            @foreach (var customer in Model.CustomerModels)
            {
                <tr>
                    <td>@customer.Id</td>
                    <td class="text-center">@customer.FirstName</td>
                    <td class="text-center">@customer.Age</td>
                    <td class="text-center">@customer.CreatedOn</td>
                    <td width="30%" class="text-center">
                        @*  The following div contains information to handle the edit and delete functions. *@
                        <div class="w-75 btn-group btn-group-sm" role="group" style="text-align:center">
                            @* Routes to the Edit page and passes the id of the record. *@
                            <a asp-page="Edit" asp-route-id="@customer.Id" class="btn btn-primary  mx-2">
                                <i class="bi bi-pencil-square"></i> Edit
                            </a>
                            @* Routes to the Delete page and passes the id of the record. *@
                            <a asp-page="Delete" asp-route-id="@customer.Id" class="btn btn-danger mx-2">
                                <i class="bi bi-trash"></i> Delete
                            </a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>

    </table>
    <div class="row">
        <div class="col text-end pb-4">
            <a asp-page="add" class="btn btn-primary mx-2 text-end" title="">
                <i class="bi bi-plus-square"></i> &nbsp;Add New Customer
            </a>
        </div>
    </div>
</div>
